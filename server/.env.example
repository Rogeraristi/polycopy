# Core server
PORT=4000
NODE_ENV=production
SESSION_SECRET=replace_with_strong_secret
SESSION_COOKIE_NAME=polycopy.sid
SESSION_MAX_AGE=604800000

# Frontend/backed URLs
CLIENT_ORIGIN=https://your-frontend-url.vercel.app
CLIENT_ORIGINS=https://your-frontend-url.vercel.app,https://www.yourdomain.com
SERVER_BASE_URL=https://your-backend-url.onrender.com

# Polymarket data sources
POLYMARKET_BASE=https://gamma-api.polymarket.com
POLYMARKET_DATA_API_BASE=https://data-api.polymarket.com
LEADERBOARD_LIMIT=12
LEADERBOARD_SOURCE_MODE=site_only
LEADERBOARD_CACHE_TTL_MS=300000

# Optional: richer trader search/profile lookup
# POLYMARKET_SEARCH_API_URL=https://gamma-api.polymarket.com/public-search
# POLYMARKET_SEARCH_API_BEARER=
# POLYMARKET_SEARCH_API_KEY=
# POLYMARKET_SEARCH_CF_ACCESS_ID=
# POLYMARKET_SEARCH_CF_ACCESS_SECRET=

# Google OAuth (required for sign-in)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-backend-url.onrender.com/api/auth/google/callback
AUTH_SUCCESS_REDIRECT=https://your-frontend-url.vercel.app/
AUTH_FAILURE_REDIRECT=https://your-frontend-url.vercel.app/?authError=oauth_failed

# Optional Firebase persistence
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
FIREBASE_DATABASE_URL=
FIREBASE_USER_COLLECTION=users
FIREBASE_LEADERBOARD_COLLECTION=leaderboardSnapshots
FIREBASE_LEADERBOARD_DOCUMENT=latest
FIREBASE_LEADERBOARD_HISTORY_COLLECTION=leaderboardSnapshotsHistory
