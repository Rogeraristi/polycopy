{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/leaderboard/?$", "dest": "/index.html" },
    { "src": "^/profile/[^/]+/?$", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
